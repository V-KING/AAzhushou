<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main1" >
	
    <include
        android:id="@+id/includeTittle"
        layout="@layout/top_tittle" />


    <include
        android:id="@+id/includeBottom"
        layout="@layout/bottom_box" />
    
    <LinearLayout
        android:id="@+id/incLayMainBody"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/includeTittle"
        android:layout_above="@id/includeBottom"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>